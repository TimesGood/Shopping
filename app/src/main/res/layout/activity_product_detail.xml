<?xml version="1.0" encoding="utf-8"?>
<com.example.ext.viewgroup.DampNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <com.example.ext.viewgroup.StatusLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.example.ext.viewgroup.RatioFrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_layout"
                app:sizeRatio="1:1">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </com.youth.banner.Banner>
            </com.example.ext.viewgroup.RatioFrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/money_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¿¥"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:textSize="25sp"
                    android:textColor="@color/red"/>
                <TextView
                    android:id="@+id/original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sub_title"
                android:textSize="20sp" />
        </LinearLayout>
    </com.example.ext.viewgroup.StatusLayout>

</com.example.ext.viewgroup.DampNestedScrollView>